---
// Trip 5: Bilbao
const tripData = {
  number: 5,
  city: "Bilbao",
  image: "/images/trips/bilbao.jpg",
  audio: "/audio/trips/bilbao-sound.mp3"
};
---

<html lang="de-CH">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="robots" content="noindex, nofollow" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" href="/favicon.ico" />
    <title>üéÅ {tripData.city} - D√∂me & Flips</title>
  </head>
  <body>
    <div class="trip-page">
      <!-- Trip Image -->
      <div class="image-container">
        <img 
          src={tripData.image} 
          alt={tripData.city}
          class="trip-image"
        />
      </div>

      <!-- City Title -->
      <h1 class="city-title">{tripData.city}</h1>

      <!-- Audio -->
      <audio 
        id="trip-audio" 
        src={tripData.audio}
        preload="auto"
      ></audio>

      <!-- Button Container -->
      <div class="button-container">
        <button id="back-btn" class="action-btn back-btn">
          ‚Üê Zrugg
        </button>
        <button id="replay-btn" class="action-btn replay-btn">
          üîÑ
        </button>
      </div>
    </div>
  </body>
</html>

<style>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    min-height: 100vh;
    overflow-x: hidden;
    background: #000;
  }

  .trip-page {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    background: linear-gradient(135deg, #1a1a2e 0%, #16213e 50%, #0f3460 100%);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 20px;
  }

  .image-container {
    max-width: 90vw;
    max-height: 60vh;
    border-radius: 15px;
    overflow: hidden;
    box-shadow: 
      0 20px 60px rgba(0, 0, 0, 0.5),
      0 0 100px rgba(255, 255, 255, 0.1);
  }

  .trip-image {
    width: 100%;
    height: 100%;
    object-fit: contain;
    display: block;
  }

  .city-title {
    font-family: 'Impact', 'Arial Black', sans-serif;
    font-size: clamp(2.5rem, 8vw, 5rem);
    color: white;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-top: 30px;
    text-shadow: 
      3px 3px 0 #ff00ff,
      -2px -2px 0 #00ffff,
      0 0 30px rgba(255, 255, 255, 0.5);
    animation: titleGlow 2s ease-in-out infinite alternate;
  }

  @keyframes titleGlow {
    from {
      text-shadow: 
        3px 3px 0 #ff00ff,
        -2px -2px 0 #00ffff,
        0 0 30px rgba(255, 255, 255, 0.5);
    }
    to {
      text-shadow: 
        3px 3px 0 #00ffff,
        -2px -2px 0 #ff00ff,
        0 0 50px rgba(255, 255, 255, 0.8);
    }
  }

  .button-container {
    position: fixed;
    bottom: 40px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    gap: 20px;
    z-index: 600;
  }

  .action-btn {
    padding: 15px 30px;
    font-size: 1.2rem;
    font-family: 'Comic Sans MS', 'Comic Neue', cursive;
    font-weight: bold;
    color: white;
    border: none;
    border-radius: 15px;
    cursor: pointer;
    transition: all 0.3s;
    text-transform: uppercase;
  }

  .back-btn {
    background: linear-gradient(135deg, #667eea, #764ba2);
    box-shadow: 0 8px 30px rgba(102, 126, 234, 0.5);
  }

  .back-btn:hover {
    transform: scale(1.1);
    box-shadow: 0 12px 40px rgba(102, 126, 234, 0.7);
  }

  .replay-btn {
    background: linear-gradient(135deg, #f093fb, #f5576c);
    box-shadow: 0 8px 30px rgba(240, 147, 251, 0.5);
    padding: 15px 20px;
    font-size: 1.8rem;
  }

  .replay-btn:hover {
    transform: scale(1.2);
    box-shadow: 0 12px 40px rgba(240, 147, 251, 0.7);
  }

  @media (max-width: 600px) {
    .button-container {
      bottom: 20px;
      gap: 15px;
    }

    .action-btn {
      padding: 12px 20px;
      font-size: 1rem;
    }

    .replay-btn {
      padding: 12px 15px;
      font-size: 1.5rem;
    }

    .image-container {
      max-height: 50vh;
    }
  }
</style>

<script>
  const tripAudio = document.getElementById('trip-audio') as HTMLAudioElement;
  const replayBtn = document.getElementById('replay-btn') as HTMLButtonElement;
  const backBtn = document.getElementById('back-btn') as HTMLButtonElement;

  // Start audio on page load
  document.addEventListener('DOMContentLoaded', () => {
    if (tripAudio) {
      tripAudio.play().catch(err => {
        console.log('Audio autoplay blocked:', err);
        document.addEventListener('click', () => {
          tripAudio.play().catch(() => {});
        }, { once: true });
      });
    }
  });

  // Replay button
  replayBtn?.addEventListener('click', () => {
    if (tripAudio) {
      tripAudio.currentTime = 0;
      tripAudio.play().catch(err => console.log('Audio play failed:', err));
    }
  });

  // Back button
  backBtn?.addEventListener('click', () => {
    if (tripAudio) {
      tripAudio.pause();
    }
    window.location.href = '/landing';
  });
</script>
