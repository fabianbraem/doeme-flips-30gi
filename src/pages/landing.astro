  }

  .door.on-cooldown {
    cursor: not-allowed;
  }

  .door.on-cooldown:hover {
    transform: none;
  }

  .door.on-cooldown .lock {
    animation: none;
  }

  /* Reset button */
  .reset-btn {
    position: fixed;
    bottom: 20px;
    left: 20px;
    width: 50px;
    height: 50px;
    border-radius: 50%;
    border: none;
    background: rgba(255, 255, 255, 0.1);
    color: rgba(255, 255, 255, 0.5);
    font-size: 1.5rem;
    cursor: pointer;
