<script>
  const COOLDOWN_MS = 5 * 60 * 1000; // 5 minutes

  // Trip data configuration
  const TRIPS: Record<number, { city: string; image: string }> = {
    1: { city: 'Prag', image: '/images/trips/prag.jpg' },
    2: { city: 'Edinburgh', image: '/images/trips/edinburgh.jpg' },
    3: { city: 'Bordeaux', image: '/images/trips/bordeaux.jpg' },
    4: { city: 'Oslo', image: '/images/trips/oslo.jpg' },
    5: { city: 'Bilbao', image: '/images/trips/bilbao.jpg' }
  };

  // Check for unlocked doors on page load
  function checkUnlockedDoors() {
    let anyDoorUnlocked = false;
    
    for (let i = 1; i <= 5; i++) {
      const isUnlocked = localStorage.getItem(`challenge${i}_complete`) === 'true';
      const door = document.querySelector(`.door[data-door="${i}"]`);
      const doorWrapper = door?.closest('.door-wrapper');
      const doorNumber = doorWrapper?.querySelector('.door-number');
      
      if (isUnlocked && door) {
        anyDoorUnlocked = true;
        door.classList.add('unlocked');
        const lock = door.querySelector('.lock');
        const chains = door.querySelector('.chains');
        const label = door.querySelector('.door-label');
        const doorSurface = door.querySelector('.door-surface') as HTMLElement;
        const cooldownOverlay = door.querySelector('.cooldown-overlay') as HTMLElement;
        
        // Get trip data
        const trip = TRIPS[i];
        
        if (lock) lock.textContent = 'üîì';
        if (chains) (chains as HTMLElement).style.opacity = '0.3';
        if (label) label.textContent = trip.city;
        if (doorNumber) doorNumber.textContent = trip.city;
        if (cooldownOverlay) cooldownOverlay.style.display = 'none';
        
        // Set trip image as background
        if (doorSurface && trip.image) {
          doorSurface.style.background = `url('${trip.image}')`;
          doorSurface.style.backgroundSize = 'cover';
          doorSurface.style.backgroundPosition = 'center';
        }
      }
    }
    
    // If any door is unlocked, show the Marshall Mathers easter egg
    if (anyDoorUnlocked) {
      startMarshallFly();
    }
  }

  // Marshall Mathers Flying Easter Egg
  const marshallFly = document.getElementById('marshall-fly') as HTMLImageElement;
  let marshallX = Math.random() * (window.innerWidth - 100);
  let marshallY = Math.random() * (window.innerHeight - 100);
  let marshallVX = (Math.random() - 0.5) * 4;
  let marshallVY = (Math.random() - 0.5) * 4;
  let flyInterval: number | null = null;

  function startMarshallFly() {
    if (!marshallFly) return;
    
    // Show the image
    marshallFly.style.display = 'block';
    marshallFly.style.left = marshallX + 'px';
    marshallFly.style.top = marshallY + 'px';
    
    // Click handler - navigate to marshall-mathers page
    marshallFly.addEventListener('click', () => {
      window.location.href = '/marshall-mathers';
    });
    
    // Animate like a fly
    flyInterval = window.setInterval(() => {
      // Randomly change direction occasionally (like a fly)
      if (Math.random() < 0.05) {
        marshallVX = (Math.random() - 0.5) * 6;
        marshallVY = (Math.random() - 0.5) * 6;
      }
      
      // Update position
      marshallX += marshallVX;
      marshallY += marshallVY;
      
      // Bounce off edges
      if (marshallX < 0) {
        marshallX = 0;
        marshallVX = Math.abs(marshallVX);
      }
      if (marshallX > window.innerWidth - 80) {
        marshallX = window.innerWidth - 80;
        marshallVX = -Math.abs(marshallVX);
      }
      if (marshallY < 0) {
        marshallY = 0;
        marshallVY = Math.abs(marshallVY);
      }
      if (marshallY > window.innerHeight - 80) {
        marshallY = window.innerHeight - 80;
        marshallVY = -Math.abs(marshallVY);
      }
      
      // Apply position
      marshallFly.style.left = marshallX + 'px';
      marshallFly.style.top = marshallY + 'px';
    }, 30);
  }

  // Check for cooldowns on doors
  function checkDoorCooldowns() {
    for (let i = 1; i <= 5; i++) {
      const door = document.querySelector(`.door[data-door="${i}"]`);
      const cooldownOverlay = document.querySelector(`.cooldown-overlay[data-cooldown="${i}"]`) as HTMLElement;
      const timerEl = cooldownOverlay?.querySelector('.cooldown-timer');
      
      if (!door || !cooldownOverlay || !timerEl) continue;
      
      // Check for cooldown - Challenge 5 uses cooldown_until, others use lastFail
      let remaining = 0;
      
      if (i === 2) {
        // Challenge 2 (coin flip): uses cooldown_until timestamp
        const cooldownUntil = localStorage.getItem('challenge2_cooldown_until');
        if (cooldownUntil) {
          remaining = parseInt(cooldownUntil) - Date.now();
        }
      } else {
        // Other challenges: use lastFail timestamp
        const lastFail = localStorage.getItem(`challenge${i}_lastFail`);
        if (lastFail) {
          remaining = COOLDOWN_MS - (Date.now() - parseInt(lastFail));
        }
      }
      
      if (remaining > 0) {
        // Show cooldown
        door.classList.add('on-cooldown');
        cooldownOverlay.style.display = 'flex';
        
        // Update timer
        const updateTimer = () => {
          let currentRemaining = 0;
          
          if (i === 2) {
            const cooldownUntil = localStorage.getItem('challenge2_cooldown_until');
            if (cooldownUntil) {
              currentRemaining = parseInt(cooldownUntil) - Date.now();
            }
          } else {
            const lastFail = localStorage.getItem(`challenge${i}_lastFail`);
            if (lastFail) {
              currentRemaining = COOLDOWN_MS - (Date.now() - parseInt(lastFail));
            }
          }
          
          if (currentRemaining <= 0) {
            door.classList.remove('on-cooldown');
            cooldownOverlay.style.display = 'none';
            return;
          }
          
          const minutes = Math.floor(currentRemaining / 60000);
          const seconds = Math.floor((currentRemaining % 60000) / 1000);
          timerEl.textContent = `${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;
          requestAnimationFrame(() => setTimeout(updateTimer, 1000));
        };
        updateTimer();
      }
    }
  }

  // Run on load
  checkUnlockedDoors();
  checkDoorCooldowns();

  // Door click handlers
  document.querySelectorAll('.door').forEach((door) => {
    door.addEventListener('click', () => {
      const doorNumber = door.getAttribute('data-door');
      const isUnlocked = localStorage.getItem(`challenge${doorNumber}_complete`) === 'true';
      
      if (isUnlocked) {
        // Door is unlocked - go to trip page
        window.location.href = `/trips/${doorNumber}`;
      } else {
        // Door is locked - go to challenge
        window.location.href = `/challenges/${doorNumber}`;
      }
    });
  });

  // Reset button
  const resetBtn = document.getElementById('reset-btn');
  resetBtn?.addEventListener('click', () => {
    if (confirm('üîÑ Willst du wirklich ALLE Challenges zur√ºcksetzen?\n\nAlle T√ºren werden wieder geschlossen!')) {
      // Clear all challenge-related localStorage
      for (let i = 1; i <= 5; i++) {
        localStorage.removeItem(`challenge${i}_complete`);
        localStorage.removeItem(`challenge${i}_lastFail`);
      }
      // Clear Challenge 2 specific keys (coin flip)
      localStorage.removeItem('challenge2_cooldown_until');
      // Reload the page
      window.location.reload();
    }
  });
</script>
