  }

  /* Trip image background for unlocked doors */
  .door.unlocked .door-surface {
    background-size: cover !important;
    background-position: center !important;
  }

  .door.unlocked .door-panels {
    display: none;
  }

  .door.unlocked .door-label {
    background: rgba(0, 0, 0, 0.7);
    padding: 5px 15px;
    border-radius: 5px;
    font-size: 1rem;
