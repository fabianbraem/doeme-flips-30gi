---
// Challenge 2: Coin Flip
// First flip always loses, then 50/50 chance with 5-min cooldown on loss
---

<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="robots" content="noindex, nofollow" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>ü™ô Challenge 2: M√ºnzwurf</title>
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        min-height: 100vh;
        font-family: 'Comic Sans MS', 'Comic Neue', cursive;
      }

      .challenge-page {
        min-height: 100vh;
        background: linear-gradient(135deg, #1a1a2e 0%, #16213e 50%, #0f3460 100%);
        padding: 20px;
        color: white;
        display: flex;
        flex-direction: column;
        align-items: center;
      }

      .back-btn {
        position: fixed;
        left: 20px;
        top: 20px;
        color: #ffd700;
        text-decoration: none;
        font-size: 1rem;
        padding: 10px 20px;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 5px;
        transition: all 0.3s;
        cursor: pointer;
        z-index: 100;
      }

      .back-btn:hover {
        background: rgba(255, 255, 255, 0.2);
      }

      .challenge-header {
        text-align: center;
        margin-top: 40px;
        margin-bottom: 30px;
      }

      h1 {
        font-size: 2.5rem;
        color: #ffd700;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.5);
        margin-bottom: 10px;
      }

      h2 {
        font-size: 1.5rem;
        color: #fff;
        margin-bottom: 10px;
      }

      .instructions {
        color: #aaa;
        font-size: 1rem;
        max-width: 400px;
        line-height: 1.5;
      }

      /* Coin Container */
      .coin-container {
        perspective: 1000px;
        margin: 40px 0;
      }

      .coin {
        width: 200px;
        height: 200px;
        position: relative;
        transform-style: preserve-3d;
        transition: transform 0.1s;
      }

      .coin.flipping {
        animation: coinFlip 1.5s ease-out forwards;
      }

      .coin.flipping.result-heads {
        animation: coinFlipHeads 1.5s ease-out forwards;
      }

      .coin.flipping.result-tails {
        animation: coinFlipTails 1.5s ease-out forwards;
      }

      @keyframes coinFlipHeads {
        0% { transform: rotateY(0deg); }
        100% { transform: rotateY(1800deg); }
      }

      @keyframes coinFlipTails {
        0% { transform: rotateY(0deg); }
        100% { transform: rotateY(1980deg); }
      }

      .coin-face {
        position: absolute;
        width: 100%;
        height: 100%;
        backface-visibility: hidden;
        border-radius: 50%;
        overflow: hidden;
        box-shadow: 0 10px 30px rgba(0,0,0,0.5);
      }

      .coin-face img {
        width: 100%;
        height: 100%;
        object-fit: cover;
      }

      .coin-heads {
        transform: rotateY(0deg);
      }

      .coin-tails {
        transform: rotateY(180deg);
      }

      /* Flip Button */
      .flip-btn {
        padding: 20px 60px;
        font-size: 1.5rem;
        font-family: inherit;
        font-weight: bold;
        background: linear-gradient(135deg, #ffd700, #ffaa00);
        color: #333;
        border: none;
        border-radius: 15px;
        cursor: pointer;
        transition: all 0.3s;
        box-shadow: 0 10px 30px rgba(255, 215, 0, 0.4);
        margin-top: 20px;
      }

      .flip-btn:hover:not(:disabled) {
        transform: scale(1.05);
        box-shadow: 0 15px 40px rgba(255, 215, 0, 0.6);
      }

      .flip-btn:disabled {
        background: #666;
        color: #999;
        cursor: not-allowed;
        box-shadow: none;
        transform: none;
      }

      /* Result Message */
      .result-message {
        margin-top: 30px;
        font-size: 1.5rem;
        min-height: 40px;
        text-align: center;
      }

      .result-message.win {
        color: #4CAF50;
      }

      .result-message.lose {
        color: #f44336;
      }

      /* Cooldown */
      .cooldown-display {
        margin-top: 20px;
        padding: 20px 40px;
        background: rgba(244, 67, 54, 0.2);
        border: 2px solid #f44336;
        border-radius: 10px;
        text-align: center;
      }

      .cooldown-display h3 {
        color: #f44336;
        margin-bottom: 10px;
      }

      .cooldown-timer {
        font-size: 2rem;
        color: #ff6b6b;
        font-weight: bold;
        font-family: monospace;
      }

      /* Success Modal */
      .modal {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.85);
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 1000;
      }

      .modal-content {
        background: linear-gradient(135deg, #1a4a1a, #0d2d0d);
        padding: 50px;
        border-radius: 20px;
        text-align: center;
        border: 3px solid #ffd700;
        box-shadow: 0 0 50px rgba(255, 215, 0, 0.4);
        animation: modalPop 0.5s ease-out;
      }

      @keyframes modalPop {
        0% { transform: scale(0) rotate(-10deg); opacity: 0; }
        100% { transform: scale(1) rotate(0); opacity: 1; }
      }

      .modal-content h2 {
        font-size: 2.5rem;
        color: #ffd700;
        margin-bottom: 20px;
      }

      .modal-content p {
        font-size: 1.3rem;
        margin-bottom: 10px;
      }

      .action-btn {
        margin-top: 25px;
        padding: 15px 40px;
        font-size: 1.3rem;
        font-family: inherit;
        border: none;
        border-radius: 10px;
        cursor: pointer;
        transition: all 0.3s;
        font-weight: bold;
        background: linear-gradient(135deg, #ffd700, #ffaa00);
        color: #333;
        box-shadow: 0 5px 20px rgba(255, 215, 0, 0.4);
      }

      .action-btn:hover {
        transform: scale(1.05);
      }

      /* Completed state */
      .completed-msg {
        margin-top: 50px;
        background: rgba(255, 215, 0, 0.2);
        padding: 30px 50px;
        border-radius: 15px;
        border: 2px solid #ffd700;
        text-align: center;
      }

      .completed-msg h2 {
        color: #ffd700;
        font-size: 2rem;
      }

      /* Responsive */
      @media (max-width: 600px) {
        body {
          font-family: 'Arial Rounded MT Bold', 'Helvetica Rounded', Arial, sans-serif;
        }
      }

      @media (max-width: 500px) {
        h1 {
          font-size: 1.8rem;
        }

        .coin {
          width: 150px;
          height: 150px;
        }

        .flip-btn {
          padding: 15px 40px;
          font-size: 1.2rem;
        }
      }
    </style>
  </head>
  <body>
    <div class="challenge-page">
      <a href="/landing" class="back-btn">‚Üê Zur√ºck</a>
      
      <header class="challenge-header">
        <h1>ü™ô Challenge 2</h1>
        <h2>M√ºnzwurf - Chopf oder Zahl?</h2>
        <p class="instructions">R√ºehr Kopf oder es git keis Gsch√§nkliü§∑‚Äç‚ôÇÔ∏è</p>
      </header>

      <div class="coin-container">
        <div class="coin" id="coin">
          <div class="coin-face coin-heads">
            <img src="/images/heads.jpg" alt="Heads" />
          </div>
          <div class="coin-face coin-tails">
            <img src="/images/tails.jpg" alt="Tails" />
          </div>
        </div>
      </div>

      <button class="flip-btn" id="flip-btn">R√ºehr das Z√º√ºgs!</button>

      <div class="result-message" id="result-message"></div>

      <div class="cooldown-display" id="cooldown-display" style="display: none;">
        <h3>‚è≥ Cooldown</h3>
        <p>Du chasch in</p>
        <div class="cooldown-timer" id="cooldown-timer">05:00</div>
        <p>wieder probiere</p>
      </div>

      <!-- Already completed message -->
      <div id="completed-msg" class="completed-msg" style="display: none;">
        <h2>‚úÖ Bereits geschafft!</h2>
        <p>Du hast diese Challenge schon bestanden.</p>
      </div>

      <!-- Success Modal -->
      <div id="success-modal" class="modal" style="display: none;">
        <div class="modal-content">
          <h2>ü™ô CHOPF!</h2>
          <p>Du hesch gwunne!</p>
          <p style="color: #aaa; font-style: italic;">D'M√ºnze isch uf dinere Siite!</p>
          <button id="continue-btn" class="action-btn">üö™ Zum Trip</button>
        </div>
      </div>
    </div>

    <script>
      const coin = document.getElementById('coin') as HTMLElement;
      const flipBtn = document.getElementById('flip-btn') as HTMLButtonElement;
      const resultMessage = document.getElementById('result-message') as HTMLElement;
      const cooldownDisplay = document.getElementById('cooldown-display') as HTMLElement;
      const cooldownTimer = document.getElementById('cooldown-timer') as HTMLElement;
      const successModal = document.getElementById('success-modal') as HTMLElement;
      const continueBtn = document.getElementById('continue-btn') as HTMLButtonElement;
      const completedMsg = document.getElementById('completed-msg') as HTMLElement;

      const COOLDOWN_MS = 5 * 60 * 1000; // 5 minutes
      let isFlipping = false;
      let cooldownInterval: number | null = null;

      // Check if already completed
      if (localStorage.getItem('challenge2_complete') === 'true') {
        flipBtn.style.display = 'none';
        document.querySelector('.coin-container')?.setAttribute('style', 'display: none');
        completedMsg.style.display = 'block';
      } else {
        // Check for active cooldown
        checkCooldown();
      }

      function checkCooldown() {
        const cooldownUntil = localStorage.getItem('challenge2_cooldown_until');
        if (cooldownUntil) {
          const remaining = parseInt(cooldownUntil) - Date.now();
          if (remaining > 0) {
            startCooldownDisplay(remaining);
          } else {
            localStorage.removeItem('challenge2_cooldown_until');
          }
        }
      }

      function startCooldownDisplay(remainingMs: number) {
        flipBtn.disabled = true;
        cooldownDisplay.style.display = 'block';

        function updateTimer() {
          const cooldownUntil = localStorage.getItem('challenge2_cooldown_until');
          if (!cooldownUntil) {
            endCooldown();
            return;
          }

          const remaining = parseInt(cooldownUntil) - Date.now();
          if (remaining <= 0) {
            endCooldown();
            return;
          }

          const minutes = Math.floor(remaining / 60000);
          const seconds = Math.floor((remaining % 60000) / 1000);
          cooldownTimer.textContent = `${String(minutes).padStart(2, '0')}:${String(seconds).padStart(2, '0')}`;
        }

        updateTimer();
        cooldownInterval = window.setInterval(updateTimer, 1000);
      }

      function endCooldown() {
        if (cooldownInterval) {
          clearInterval(cooldownInterval);
          cooldownInterval = null;
        }
        localStorage.removeItem('challenge2_cooldown_until');
        cooldownDisplay.style.display = 'none';
        flipBtn.disabled = false;
        resultMessage.textContent = '';
        resultMessage.className = 'result-message';
      }

      function flipCoin() {
        if (isFlipping || flipBtn.disabled) return;
        if (localStorage.getItem('challenge2_complete') === 'true') return;

        isFlipping = true;
        flipBtn.disabled = true;
        resultMessage.textContent = '';
        resultMessage.className = 'result-message';

        // True 50/50 chance
        const result: 'heads' | 'tails' = Math.random() < 0.5 ? 'heads' : 'tails';

        // Reset animation
        coin.classList.remove('flipping', 'result-heads', 'result-tails');
        void coin.offsetWidth; // Force reflow

        // Add animation class
        coin.classList.add('flipping', `result-${result}`);

        // Handle result after animation
        setTimeout(() => {
          isFlipping = false;
          
          if (result === 'heads') {
            // Win!
            localStorage.setItem('challenge2_complete', 'true');
            resultMessage.textContent = 'üéâ CHOPF! YAYYYY!!';
            resultMessage.classList.add('win');
            
            setTimeout(() => {
              successModal.style.display = 'flex';
            }, 500);
          } else {
            // Lose
            resultMessage.textContent = 'YIIKEERRZZZZ! Leider verlore... Wenigstens es cools Bild @D√∂me';
            resultMessage.classList.add('lose');
            
            // Start cooldown
            const cooldownUntil = Date.now() + COOLDOWN_MS;
            localStorage.setItem('challenge2_cooldown_until', cooldownUntil.toString());
            
            setTimeout(() => {
              startCooldownDisplay(COOLDOWN_MS);
            }, 1000);
          }
        }, 1500);
      }

      flipBtn.addEventListener('click', flipCoin);

      continueBtn.addEventListener('click', () => {
        window.location.href = '/trips/2';
      });
    </script>
  </body>
</html>
